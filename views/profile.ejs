            </div> -->
          </div>
      </div>
      <div class="flex justify-end mt-6">
          <button class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-pink-500 rounded-md hover:bg-pink-700 focus:outline-none focus:bg-gray-600">Add</button>
      </div>
  </form>
</section>

<section>
  <div>
    <h2 class="text-3xl font-bold mb-10">My Recipes</h2>
    <ul class="recipes">

    <% for(var i=0; i<recipes.length; i++) {%>
      <% if (recipes[i].email === user.local.email) { %>
      <li class="recipe">
        <div class="container grid grid-cols-12 my-5 dark:bg-gray-900">
          <div class="bg-no-repeat bg-cover dark:bg-gray-700 col-span-full lg:col-span-4" style="background-image: url('https://source.unsplash.com/random/640x480?<%= recipes[i].recipeName %>'); background-position: center center; background-blend-mode: multiply; background-size: cover;"></div>
          <div class="flex flex-col p-6 col-span-full row-span-full lg:col-span-8 lg:p-10">
            <h3 class="text-3xl font-semibold"><%= recipes[i].recipeName %></h3>
            <p class="inline-flex items-center pt-2 pb-6 space-x-2 text-sm dark:text-violet-400"><%= recipes[i].recipeDesc %></p>
            <h4>Ingredients</h4>
            <span class="inline-flex items-center pt-2 pb-6 space-x-2 text-sm dark:text-violet-400"><%= recipes[i].ingredients %></span>
            <h4>Instructions</h4>
            <span class="inline-flex items-center pt-2 pb-6 space-x-2 text-sm dark:text-violet-400"><%= recipes[i].instructions %></span>
